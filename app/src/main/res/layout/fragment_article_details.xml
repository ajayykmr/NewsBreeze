<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.ArticleDetailsFragment"
    >

    <ImageView
        android:id="@+id/iv_article_image_detail"
        android:layout_width="0dp"
        android:layout_height="400dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:background="@color/black"
        />

    <ImageView
        android:id="@+id/iv_ad_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/ic_back_button"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintLeft_toLeftOf="@id/iv_article_image_detail"
        app:layout_constraintTop_toTopOf="@id/iv_article_image_detail"
        />

    <ImageView
        android:id="@+id/iv_ad_bookmark_icon"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_bookmarks_outlined"
        android:layout_marginRight="25dp"
        app:layout_constraintRight_toRightOf="@id/iv_article_image_detail"
        app:layout_constraintTop_toTopOf="@id/iv_ad_back_button"
        app:layout_constraintBottom_toBottomOf="@+id/iv_ad_back_button"
        />
    <TextView
        android:id="@+id/tv_ad_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="TITLE"
        android:textColor="@color/white"
        android:fontFamily="@font/queenspark_bold"
        app:layout_constraintBottom_toTopOf="@id/cardview_ad"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="10dp"
        android:textSize="25sp"
        android:background="#80000000"
        android:lineSpacingExtra="7sp"
        android:paddingHorizontal="10dp"
        />

    <TextView
        android:id="@+id/tv_ad_date"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="29-03-21"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/tv_ad_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="10dp"
        android:background="#80000000"
        android:fontFamily="@font/source_sans3_regular"
        android:paddingHorizontal="10dp"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_ad"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/iv_article_image_detail"
        android:layout_marginTop="-30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        app:cardCornerRadius="40dp"
        android:padding="50dp"

        app:cardBackgroundColor="@color/bg_color"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/iv_ad_profile_picture"
                android:layout_width="50dp"
                android:layout_height="50dp"
                tools:src="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                />

            <TextView
                android:id="@+id/tv_ad_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="NAMENAME"
                app:layout_constraintTop_toTopOf="@id/iv_ad_profile_picture"
                app:layout_constraintLeft_toRightOf="@id/iv_ad_profile_picture"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:fontFamily="@font/source_sans3_regular"
                android:textColor="@color/text_color_1"

                />
            <TextView
                android:id="@+id/tv_ad_author_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Position"
                app:layout_constraintTop_toBottomOf="@+id/tv_ad_author_name"
                app:layout_constraintLeft_toRightOf="@id/iv_ad_profile_picture"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                />
            <Button
                android:id="@+id/btn_ad_save"
                android:text="Save"
                android:textAllCaps="false"
                android:backgroundTint="@color/green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="25dp"
                app:layout_constraintTop_toTopOf="@id/tv_ad_author_name"
                app:layout_constraintBottom_toBottomOf="@id/iv_ad_profile_picture"

                />
            <ScrollView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/iv_ad_profile_picture"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:paddingHorizontal="10dp"
                    android:id="@+id/tv_ad_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    tools:text="article detail"
                    android:textColor="@color/text_color_1"
                    android:fontFamily="@font/queenspark"
                    android:lineSpacingExtra="10sp"
                    />
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>